<?xml version="1.0"?>
<launch>  
  
  <!-- Load joint controller configurations from YAML file to parameter server -->
  <rosparam file="$(find rover_control)/config/gazebo_controllers.yaml" command="load"/>
  
  <!-- load the controllers -->
  <node name="controller_spawner" pkg="controller_manager" type="spawner" respawn="false" output="screen" ns="/minirover4" 
  args="joint_state_controller backleft_wheel_effort_controller backright_wheel_effort_controller frontright_wheel_effort_controller frontleft_wheel_effort_controller midright_wheel_effort_controller midleft_wheel_effort_controller"/>
  
  <!-- convert joint states to TF transforms for rviz, etc -->
  <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" respawn="false" output="screen">
     <remap from="/joint_states" to="/minirover4/joint_states"/>
  </node>
</launch>
