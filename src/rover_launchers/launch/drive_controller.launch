<launch>
  <node name="drive_joy_node" pkg="joy" type="joy_node" output="screen">
    <param name="dev" value="/dev/input/by-id/usb-06a3_Saitek_Cyborg_USB_Stick-joystick "/>
    <param name="deadzone" value="0.1" />
    <param name="autorepeat_rate" value="20" />
    <param name="coalesce_interval" value="0.05" />
    <remap from="/joy" to="/joy_drive"/>
  </node>
   <node name="drive_controller" pkg="sb_all_controller" type="drive_controller" output="screen">
  </node>
</launch>
